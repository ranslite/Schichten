<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <CalendarView
        android:id="@+id/cvKalender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rgSchicht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbFrueh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:checked="true"
                android:text="Früh"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbSpaet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Spät"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbNacht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Nacht"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbFruehNacht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Früh/Nacht"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbLangerTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Langer Tag"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbLangeNacht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Lange Nacht"
                android:textSize="20sp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgStellwerk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbLinsburg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:checked="true"
                android:text="Linsburg"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbRohrsen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Rohrsen"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbEytrup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Eystrup"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/buEintragen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Eintragen"
        android:textAllCaps="false"
        android:textSize="24sp" />

</LinearLayout>